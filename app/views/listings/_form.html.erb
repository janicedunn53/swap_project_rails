<%= form_for [@listingable, Listing.new], html: { multipart: true }, remote: true, authenticity_token: true do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Name of the Item" %>
  </div>

  <div class="form-group">
    <%= f.text_area :description, class: "form-control", placeholder: "Description of the Item" %>
  </div>

  <div class="form-group">
    <%= f.label :photo %>
    <%= f.file_field :photo, class: "form-control" %>
  </div>
  <br>
  <%= f.submit class: "btn btn-info" %>
<% end %>
