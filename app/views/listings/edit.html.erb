<h1>Edit listing</h1>

<%= form_for [@user, @listing], html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Name of the Item" %>
  </div>

  <div class="form-group">
    <%= f.text_area :description, class: "form-control", placeholder: "Description of the Item" %>
  </div>

  <div class="form-group">
    <%= f.label :exchange_type, "What type of exchange?" %>
    <%= f.select(:exchange_type, ["Swap", "Share", "Gift"]) %>
  </div>

  <div class="form-group">
    <%= f.label :photo %>
    <%= f.file_field :photo, class: "form-control" %>
  </div>
  <br>
  <%= f.submit class: "btn btn-info" %>
<% end %>
